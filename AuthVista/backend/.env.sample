# Database Configuration
DATABASE_URL=postgresql://tadoba_user:secure_password@localhost:5432/tadoba_surveillance
POSTGRES_USER=tadoba_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=tadoba_surveillance

# JWT Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Mapbox Configuration
MAPBOX_ACCESS_TOKEN=pk.your-mapbox-token-here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# AWS S3 for Snapshots (optional, use local storage for dev)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=tadoba-surveillance-snapshots
USE_S3=false

# RTSP Credentials (encrypted storage in production)
RTSP_ENCRYPTION_KEY=your-encryption-key-here

# Inference Configuration
YOLO_MODEL_PATH=./models/yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_DEVICE=cpu  # or 'cuda' for GPU
MAX_DETECTION_FPS=5

# Storage
SNAPSHOT_RETENTION_DAYS=30
LOCAL_SNAPSHOT_PATH=./snapshots

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Server
HOST=0.0.0.0
PORT=8000
